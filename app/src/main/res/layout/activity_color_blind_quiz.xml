<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background"
    android:fitsSystemWindows="true"
    tools:context=".ColorBlindQuizActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Tombol Back -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/backBtn"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:icon="@drawable/ic_back"
            app:iconSize="24dp" />

        <!-- Progress Bar -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/progressText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pertanyaan 1 dari 10"
                android:textSize="14sp"
                android:fontFamily="@font/fig_500"
                android:textColor="@color/md_theme_onSurface"
                android:layout_gravity="center_horizontal" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:progress="10"
                android:max="100"
                app:indicatorColor="@color/md_theme_primary" />
        </LinearLayout>
    </LinearLayout>

    <!-- Content ScrollView -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Kategori -->
            <com.google.android.material.chip.Chip
                android:id="@+id/categoryChip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Persepsi Warna Sehari-hari"
                android:layout_marginBottom="16dp"
                app:chipBackgroundColor="@color/md_theme_primaryContainer"
                app:chipStrokeWidth="0dp" />

            <!-- Gambar (optional) -->
            <ImageView
                android:id="@+id/questionImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_corner_background"
                android:visibility="gone" />

            <!-- Pertanyaan -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                style="@style/Widget.Material3.CardView.Filled">

                <TextView
                    android:id="@+id/questionText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="Saat melihat semangka, bagian dalam buah tersebut terlihat seperti warna apa bagimu?"
                    android:textSize="18sp"
                    android:fontFamily="@font/fig_500"
                    android:textColor="@color/md_theme_onSurface"
                    android:lineSpacingExtra="4dp" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Pilihan Jawaban -->
            <RadioGroup
                android:id="@+id/optionsRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Option A -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/optionACard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="12dp"
                    app:strokeWidth="2dp"
                    app:strokeColor="@color/md_theme_outline"
                    style="@style/Widget.Material3.CardView.Outlined">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <RadioButton
                            android:id="@+id/optionARadio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/optionAText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="A. Merah cerah"
                            android:textSize="16sp"
                            android:fontFamily="@font/fig_400"
                            android:textColor="@color/md_theme_onSurface" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Option B -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/optionBCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="12dp"
                    app:strokeWidth="2dp"
                    app:strokeColor="@color/md_theme_outline"
                    style="@style/Widget.Material3.CardView.Outlined">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <RadioButton
                            android:id="@+id/optionBRadio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/optionBText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="B. Coklat kemerahan"
                            android:textSize="16sp"
                            android:fontFamily="@font/fig_400"
                            android:textColor="@color/md_theme_onSurface" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Option C -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/optionCCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="12dp"
                    app:strokeWidth="2dp"
                    app:strokeColor="@color/md_theme_outline"
                    style="@style/Widget.Material3.CardView.Outlined">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <RadioButton
                            android:id="@+id/optionCRadio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/optionCText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="C. Abu-abu atau tidak jelas"
                            android:textSize="16sp"
                            android:fontFamily="@font/fig_400"
                            android:textColor="@color/md_theme_onSurface" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Option D -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/optionDCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardCornerRadius="12dp"
                    app:strokeWidth="2dp"
                    app:strokeColor="@color/md_theme_outline"
                    style="@style/Widget.Material3.CardView.Outlined">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <RadioButton
                            android:id="@+id/optionDRadio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/optionDText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="D. Saya tidak tahu"
                            android:textSize="16sp"
                            android:fontFamily="@font/fig_400"
                            android:textColor="@color/md_theme_onSurface" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </RadioGroup>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Layout -->
    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Tombol Previous -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/previousBtn"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Sebelumnya"
            android:fontFamily="@font/fig_500"
            android:visibility="gone" />

        <!-- Tombol Next -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/nextBtn"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Selanjutnya"
            android:fontFamily="@font/fig_500"
            android:enabled="false" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>