<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_background"
    android:fitsSystemWindows="true"
    tools:context=".QuizResultActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backBtn"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:icon="@drawable/ic_back"
            app:iconSize="24dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:text="Hasil Kuis"
            android:textSize="20sp"
            android:fontFamily="@font/fig_600"
            android:textColor="@color/md_theme_onSurface"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- Content ScrollView -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Congratulations Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                style="@style/Widget.Material3.CardView.Filled"
                app:cardBackgroundColor="@color/md_theme_primaryContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_check_circle"
                        app:tint="@color/md_theme_primary"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kuis Selesai!"
                        android:textSize="24sp"
                        android:fontFamily="@font/fig_600"
                        android:textColor="@color/md_theme_onPrimaryContainer"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terima kasih telah menyelesaikan kuis buta warna"
                        android:textSize="14sp"
                        android:fontFamily="@font/fig_400"
                        android:textColor="@color/md_theme_onPrimaryContainer"
                        android:textAlignment="center" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Score Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                style="@style/Widget.Material3.CardView.Outlined">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Statistik Kuis"
                        android:textSize="18sp"
                        android:fontFamily="@font/fig_600"
                        android:textColor="@color/md_theme_onSurface"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Pertanyaan:"
                            android:textSize="16sp"
                            android:fontFamily="@font/fig_400"
                            android:textColor="@color/md_theme_onSurface" />

                        <TextView
                            android:id="@+id/totalQuestionsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textSize="16sp"
                            android:fontFamily="@font/fig_600"
                            android:textColor="@color/md_theme_primary" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Pertanyaan Dijawab:"
                            android:textSize="16sp"
                            android:fontFamily="@font/fig_400"
                            android:textColor="@color/md_theme_onSurface" />

                        <TextView
                            android:id="@+id/answeredQuestionsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textSize="16sp"
                            android:fontFamily="@font/fig_600"
                            android:textColor="@color/md_theme_primary" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Skor:"
                            android:textSize="16sp"
                            android:fontFamily="@font/fig_400"
                            android:textColor="@color/md_theme_onSurface" />

                        <TextView
                            android:id="@+id/scoreText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7/10"
                            android:textSize="16sp"
                            android:fontFamily="@font/fig_600"
                            android:textColor="@color/md_theme_primary" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Diagnosis Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                style="@style/Widget.Material3.CardView.Outlined">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_medical_services"
                            app:tint="@color/md_theme_primary"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hasil Diagnosis"
                            android:textSize="18sp"
                            android:fontFamily="@font/fig_600"
                            android:textColor="@color/md_theme_onSurface" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/diagnosisText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kemungkinan mengalami kesulitan membedakan warna merah-hijau (Deuteranopia/Protanopia)"
                        android:textSize="16sp"
                        android:fontFamily="@font/fig_400"
                        android:textColor="@color/md_theme_onSurface"
                        android:lineSpacingExtra="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="*Hasil ini bersifat indikatif dan tidak menggantikan diagnosis medis profesional"
                        android:textSize="12sp"
                        android:fontFamily="@font/fig_400"
                        android:textColor="@color/md_theme_outline"
                        android:layout_marginTop="8dp"
                        android:fontStyle="italic" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Recommendations Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                style="@style/Widget.Material3.CardView.Outlined">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_lightbulb"
                            app:tint="@color/md_theme_primary"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rekomendasi"
                            android:textSize="18sp"
                            android:fontFamily="@font/fig_600"
                            android:textColor="@color/md_theme_onSurface" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/recommendationsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!-- Recommendations will be added programmatically -->
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Layout -->
    <LinearLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/retakeQuizBtn"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Ulangi Kuis"
            android:fontFamily="@font/fig_500" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backToHomeBtn"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Kembali"
            android:fontFamily="@font/fig_500" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>